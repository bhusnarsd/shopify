<!DOCTYPE html>
<html lang="en">
    <%- include("../partials/head.ejs") %>
<body>
    
  <%- include("../partials/nav.ejs") %>
    

    <div class="content ">
        <h2>All Store</h2>
        <div >
        <% if (store.length > 0) { %>
            <% store.forEach(store => { %>
                <a  href="/store/<%= store._id %>">
               <div class="border-left">
                 <h3  class="title"><%= store.storeName %></h3>
                 <p  ><%=store.emailID %></p><br>
                 <p  ><%=store.userID %></p>
               </div>
                </a>
                <%  }) %>
            </div>

     <%  }else { %>
        <p>there is no store to display...</p>
       <% } %>
    </div>
    <%- include("../partials/footer.ejs") %>
    
</body>
</html>